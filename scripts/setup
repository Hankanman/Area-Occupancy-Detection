#!/usr/bin/env bash

set -e
set -o pipefail

cd "$(dirname "$0")/.."

echo "ğŸ”§ Setting up Area Occupancy Detection development environment..."

# Check if we're already in a virtual environment
if [[ -n "$VIRTUAL_ENV" ]]; then
    echo "âœ… Using existing virtual environment: $VIRTUAL_ENV"
    PYTHON_CMD="python"
else
    # Check if .venv exists, create if it doesn't
    if [[ ! -d ".venv" ]]; then
        echo "ğŸ“ Creating virtual environment in .venv..."
        python3 -m venv .venv
    fi

    echo "ğŸ”„ Activating virtual environment..."
    source .venv/bin/activate
    echo "âœ… Virtual environment activated: $(which python)"
    PYTHON_CMD="python"
fi

echo "ğŸ“¦ Installing dependencies..."
$PYTHON_CMD -m pip install --upgrade pip
$PYTHON_CMD -m pip install -r requirements.txt -r requirements_test.txt

echo "âœ… Setup complete! You can now run:"
echo "   source .venv/bin/activate  # Activate environment (if not already active)"
echo "   pytest                     # Run tests"
